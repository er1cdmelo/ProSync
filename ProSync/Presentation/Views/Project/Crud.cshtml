@model ProSync.Presentation.Models.Project.ProjectVm
@{
    ViewData["Title"] = "Projectsss";
    var action = Model.ProjectId != null ? "Edit" : "Create";
}

<div>
    @if(Model.ProjectId != null)
    {
        <h3>Edit: @Model.Title</h3>
    } else
    {
        <h3>Create Project</h3>
    }
    @using (Html.BeginForm(action, "Project", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.StartDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.EndDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", type = "date" })
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    }
</div>

<script>
    $("document").on("ready", () => {
        $('#datetimepicker1').datetimepicker();
    })
</script>